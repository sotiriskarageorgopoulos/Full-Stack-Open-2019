{
  "name": "backend_phonebook",
  "version": "1.0.0",
  "description": "A backend implementation of phonebook",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "nodemon index.js",
    "build:ui": "rm -rf build && cd ../part2/phonebook && npm run build --prod && cp -r build ../part3/backend_phonebook",
